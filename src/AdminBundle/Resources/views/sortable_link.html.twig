<a{% for attr, value in options %}{% if attr != 'title' %} {{ attr }}="{{ value }}"{% endif %}{% endfor %}>
<span class="btn btn-outline-primary sortable">
{{ title }}    
{% if options.class == 'asc' %}
    <span class="ui-state-default ui-corner-all"><span class="ui-icon ui-icon-caret-1-n"></span></span>
{% endif %}
{% if options.class == 'desc' %}
    <span class="ui-state-default ui-corner-all"><span class="ui-icon ui-icon-caret-1-s"></span></span>
{% endif %}
</span>
</a>