{% extends 'base.html.twig' %}

{% block title %}Рубрика 1{% endblock %}
{% block body %}

    <div class="text-center">

        <h1>Рубрика 1</h1>

        <div class="admin-sherch d-flex justify-content-center">
            <form class="form-inline">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" class="form-control admin-input-sherch" id="item-serch" name="serch" placeholder="Пошук">
                </div>
                <button type="submit" class="btn btn-outline-primary mb-2">Пошук</button>
            </form>
        </div>

        <a href="{{ path('modelmenu_new') }}" class="btn btn-outline-primary">Створити нову Рубрику 1</a><br/><br/>

        <div class="count h6">
            Всього результатів: {{ modelMenus.getTotalItemCount }}
        </div>
        <br/>

        <div class="navigation row justify-content-center align-items-center">
            {{ knp_pagination_render(modelMenus) }}
        </div>
        <br/><br/>

        <table align="center" class="admin-table1 table table-bordered table-hover h6 data-modal">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(modelMenus, 'Імя', 'a.name') }}</th>
                <th class="admin-widht-id">{{ knp_pagination_sortable(modelMenus, 'Id', 'a.id') }}</th>
                <th class="align-middle admin-widht-action">Дії</th>
            </tr>
            </thead>
            <tbody>
            {% for modelMenu in modelMenus %}
                <tr>
                    <td class="delete-modal-info"><a
                                href="{{ path('modelmenu_show', { 'id': modelMenu.id }) }}"><span>{{ modelMenu.name }}</span></a>
                    </td>
                    <td>{{ modelMenu.id }}</td>
                    <td class="admin-padding">
                        <a href="{{ path('modelmenu_show', { 'id': modelMenu.id }) }}"
                           class="btn btn-outline-primary btn-sm">Показати</a>
                        <a href="{{ path('modelmenu_edit', { 'id': modelMenu.id }) }}"
                           class="btn btn-outline-primary btn-sm">Редагувати</a>
                        <a class="btn btn-outline-danger btn-sm is-delete"
                           href="{{ path('modelmenu_delete', {'id': modelMenu.id}) }}">Видалити</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <br/>
        <div class="navigation row justify-content-center align-items-center">
            {{ knp_pagination_render(modelMenus) }}
        </div>

        <br/><br/><a href="{{ path('modelmenu_new') }}" class="btn btn-outline-primary">Створити нову Рубрику 1</a><br/><br/><br/>

    </div>

{% endblock %}
