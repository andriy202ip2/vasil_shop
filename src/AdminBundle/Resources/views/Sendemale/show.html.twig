{% extends 'base.html.twig' %}
{% block title %}Перетелефонуйте мені{% endblock %}
{% block body %}

    <div class="text-center">
        <h1>Перетелефонуйте мені</h1>

        <table align="center" class="admin-table table table-bordered table-hover h6">
            <tbody>
                <tr>
                    <th class="table-success" style="width: 170px">Id:</th>
                    <td>{{ sendemale.id }}</td>
                </tr>
                <tr>
                    <th class="table-success">Перезвоніть мені:</th>
                    <td>{{ sendemale.sendemale | raw}}</td>
                </tr>
                <tr>
                    <th class="table-success">Час:</th>
                    <td>{% if sendemale.data %}{{ sendemale.data|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
                
        <br/><br/>
        <a href="{{ path('sendemale_index') }}" class="btn btn-outline-primary">Вернутись назад</a>
        <br/><br/>
        <a href="{{ path('sendemale_delete', { 'id': sendemale.id }) }}" class="btn btn-outline-danger is-delete">Видалити</a>
        <br/><br/><br/>

    </div>        
{% endblock %}
