{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="text-center"> 
        
    <h1>Користувач</h1>

    <table align="center" class="admin-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Пароль зашифрований</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Імя</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Фамілія</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th>Чи активований</th>
                <td>{% if user.isActive %}Так{% else %}Ні{% endif %}</td>
            </tr>
            <tr>
                <th>Роль</th>
                <td>{{ user.roles|join(',') }}</td>
            </tr>
            <tr>
                <th>Сіль Паролю</th>
                <td>{{ user.salt }}</td>
            </tr>
        </tbody>
    </table>

        <br/><a href="{{ path('user_index') }}"><button class="ui-button ui-corner-all ui-widget">Вернутись назад</button></a><br/><br/>
        <a href="{{ path('user_edit', { 'id': user.id }) }}"><button class="ui-button ui-corner-all ui-widget">Редагувати</button></a><br/><br/>            
         
            {{ form_start(delete_form) }}
                <button class="ui-button ui-corner-all ui-widget">Видалити</button><br/><br/>
            {{ form_end(delete_form) }}

            
    </div>
{% endblock %}
