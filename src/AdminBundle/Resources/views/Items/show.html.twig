{% extends 'base.html.twig' %}

{% block body %}

    <div class="text-center"> 

        <h1>Запчастина</h1>

        <table border="0" class="catalog admin-smol-font" align="center">
            <tbody>
                <tr>
                    <td><b>Дані</b></td>
                    <td><b>Код GH</b></td>
                    <td><b>Сторона</b></td>
                    <td><b>Застосування</b></td>
                    <td><b>Ціна</b></td>
                    <td><b>Фото</b></td>
                    <td><b>Дії</b></td>
                </tr>
                <tr>
                    <td colspan="7"><hr></td>
                </tr>

                <tr>
                    <td>
                        <table style="width:100%">
                            <tr>
                                <th>Модель:</th>
                            </tr>
                            <tr>
                                <td>
                                    {{ Item.model.name }}
                                </td>
                            </tr>
                        </table> 
                        <table style="width:100%">
                            <tr>
                                <th>Авто: </th>
                            </tr>
                            <tr>
                                <td>
                                    {{ Item.auto.name }}
                                </td>
                            </tr>
                        </table> 
                        <table style="width:100%">
                            <tr>
                                <th>Рока:</th>
                            </tr>
                            <tr>
                                <td>
                                    {{ Item.data.name }}
                                </td>
                            </tr>
                        </table> 

                    </td>
                    <td>
                        {{ Item.name | raw }}
                        <a href="#" class="item_dialog" val="item{{ Item.id }}">
                            <img src="/img/info-small.png" style="border:0"></a>
                    </td>
                    <td>{{ Item.side | raw}}</td>
                    <td>{{ Item.fit | raw}}</td>
                    <td>
                        {% if Item.price == null %}
                            Під заказ
                        {% elseif Item.price | money_as_float == 0 %}    
                            Під заказ
                        {% else %}
                            {{ Item.price | money_convert("UAH") | money_format }}                            
                        {% endif %}
                    </td>
                    <td>

                        <a href="#" class="item_dialog" val="item{{ Item.id }}" title="&lt;img src=&#39;/img/upload/{{ Item.img }}&#39; class=&#39;img_big&#39;&gt;{{ Item.imgData }}">
                            <img src="/img/camera.png"></a>   
                        <div class="item{{ Item.id }}i" style="display:none;">
                            <img src="/img/upload/{{ Item.img }}" class="img_big">
                            {{ Item.imgData | raw}}
                        </div>
                        <div class="item{{ Item.id }}t" style="display:none;">                                       
                            {{ Item.imgData | raw}}
                        </div>
                    </td>
                    <td>
                        <br/><a href="{{ path('items_index') }}"><button class="ui-button ui-corner-all ui-widget">Вернутись назад</button></a><br/><br/>
                        <a href="{{ path('items_edit', { 'id': Item.id }) }}"><button class="ui-button ui-corner-all ui-widget">Редагувати</button></a><br/><br/>



                    </td>
                </tr>
                <tr>
                    <td colspan="7" class="item_element">
                        <hr>
                        <div class="showApplication item_on" style="display:none;">Дисплей додаткових додатків</div>
                        <div class="showApplication item_off">Приховати</div>
                        <div class="item_info item{{ Item.id }}">
                            <center>
                                {{ Item.details | raw}} 
                            </center>
                        </div>
                        <hr></td>
                </tr>
                <tr>
                    <td colspan="7" class="item_element">
                        <h2>Малюнок:</h2>
                        <img src="/img/upload/{{ Item.img }}" width="700px">
                        <hr>
                    </td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-outline-danger is-delete"
           href="{{ path('items_delete', {'id': Item.id}) }}">Видалити</a><br/><br/><br/>

    </div>         

{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {

        });
    </script>    
{% endblock %}