{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mobile</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mobile.id }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ mobile.mobile }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mobile_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mobile_edit', { 'id': mobile.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
